<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Niko's Tech Blog</title>
  <script>
    window.currentUser = {
      userName: '{{user.userName}}' 
    };
  </script>
  <link rel="stylesheet" href="./css/jass.css">
  <link rel="stylesheet" href="./css/style.css">
</head>

<body>
  <div class="flex-column justify-space-around">
    <header class="display-flex flex-column align-center p-2">
      <nav class="display-flex justify-flex-start">
        <a href="/">Home</a> |
        <a href="/dashboard">Dashboard</a> |
        {{#if logged_in}}
        <button class="no-button" id="logout">Logout</button>
        {{else}}
        <button class="no-button" id="login">Login</button>
        {{/if}}
      </nav>
      <h1>Niko's Tech Blog</h1>
    </header>
    <main class="container container-fluid mt-5">
      {{{ body }}}
    </main>
    <footer>
      <!-- Footer content -->
    </footer>
    {{#if logged_in}}
    <script src="/js/logout.js"></script>
    {{/if}}
    <script src="/js/login.js"></script>
  </div>
</body>

</html>
