<main class="container">
  <input value={{title}}>

  <section>
    <p><strong>Posted by:</strong> {{user.userName}}</p>
    <p><strong>Date Created:</strong> {{formattedDate}}</p>
    <input value={{description}}>

    <div>
      <button id="edit-post-button" data-id="{{id}}">Edit</button>
      <button id="delete-post-button" data-id="{{id}}">Delete</button>
      <a href="/dashboard" class="button">Back to Dashboard</a>
    </div>
  </section>

  <section id="edit-section" style="display: none;">
    <h3>Edit Post</h3>
    <form id="edit-post-form">
      <div>
        <label for="edit-title">Title</label>
        <input type="text" id="edit-title" name="title" value="{{title}}" required>
      </div>
      <div>
        <label for="edit-description">Content</label>
        <textarea id="edit-description" name="description" required>{{description}}</textarea>
      </div>
      <div>
        <button type="submit">Save Changes</button>
        <button type="button" id="cancel-edit-button">Cancel</button>
      </div>
    </form>
  </section>
</main>

<script src="/js/postdetails.js"></script>
