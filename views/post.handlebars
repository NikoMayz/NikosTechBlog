     <main class="container">

    <h1>{{title}}</h1>
    <p class="post-meta">
        <span>Posted by {{user.userName}} on {{formatDate date_created}}</span>
    </p>
    <p>{{{description}}}</p>

    <!-- Display comments if there are any -->
    {{#if comments.length}}
        <div class="comments">
            <h3>Comments</h3>
            {{#each comments}}
                <div class="comment">
                    <p class="comment-meta">
                        <span>Comment by {{user.userName}} on {{formatDate date_created}}</span>
                    </p>
                    <p>{{{content}}}</p>
                </div>
            {{/each}}
        </div>
    {{else}}
        <p>No comments yet.</p>
    {{/if}}

    <!-- Comment form -->
    <div class="comment-form">
        <h3>Leave a Comment</h3>
        <form id="comment-form">
            <textarea name="commentContent" rows="4" placeholder="Write your comment here..." required></textarea>
            <button type="submit">Submit</button>
        </form>
    </div>

    <!-- Back button -->
    <a href="/" class="back-button">Back to Homepage</a>

    </main>


<script src="/js/comments.js"></script>
